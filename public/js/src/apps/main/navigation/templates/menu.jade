style
    include style.css

nav.navbar.navbar-inverse.navbar-static-top(style='margin-bottom: 0;')
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-menu')
                span.sr-only Toggle Navigation
                each i in [1,2,3]
                    span.icon-bar
            a.navbar-brand(href='#', style='padding: 4px;')
                img(alt='WCC', src='../images/wcc_ring.png', style='height: 100%;')
            a.navbar-brand(href='#', style='margin-left: 0;')
                span.brand-text(style='color: #B64747; font-weight: bold;') wcc
                span.brand-text(style='color: #C5C5C5;') portal
        .collapse.navbar-collapse#main-menu
            ul.nav.navbar-nav.js-main-menu
                li.active
                    a(href='#', data-tab='home') Home
                li
                    a(href='#', data-tab='root') Main Menu
                li
                    a(href='#', data-tab='departments') Departments
                li
                    a(href='#', data-tab='operations') Operations
            ul.nav.navbar-nav.navbar-right
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown', role='button' aria-expanded='false')
                        span#greeting(style='margin-right: 5px;')
                        span.caret
                    ul.dropdown-menu.dropdown-menu-right(role='menu')
                        li
                            a(href='#', data-tab='profile') My Settings #[span.glyphicon.glyphicon-user.pull-right]
                        | {{#if isAdmin}}
                        li
                        a(href='#', data-tab='admin') Admin #[span.glyphicon.cog.pull-right]
                        | {{/if}}
                        li.divider(role='presentation')
                        li
                            a(href='/logout', data-tab='signout') Logout #[span.glyphicon.glyphicon-log-out.pull-right]

.row#sub-menu
